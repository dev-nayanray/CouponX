{
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "color": {
            "palette": [
                {
                    "name": "Primary",
                    "color": "#ff6b6b"
                },
                {
                    "name": "Secondary",
                    "color": "#4ecdc4"
                },
                {
                    "name": "Dark",
                    "color": "#2d3436"
                },
                {
                    "name": "Light",
                    "color": "#f9f9f9"
                },
                {
                    "name": "Light Gray",
                    "color": "#e0e0e0"
                },
                {
                    "name": "White",
                    "color": "#ffffff"
                }
            ],
            "gradients": [
                {
                    "name": "Dark Gradient",
                    "gradient": "linear-gradient(135deg, #2d3436 0%, #000000 100%)",
                    "slug": "dark-gradient"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "name": "Small",
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "16px",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "24px",
                    "slug": "large"
                },
                {
                    "name": "X-Large",
                    "size": "32px",
                    "slug": "x-large"
                }
            ],
            "fontFamilies": [
                {
                    "name": "Body",
                    "slug": "body",
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
                },
                {
                    "name": "Heading",
                    "slug": "heading",
                    "fontFamily": "'Inter', sans-serif"
                }
            ]
        },
        "custom": {
            "spacing": {
                "outer": "var(--wp--custom--spacing--outer, 1.25rem)"
            }
        }
    },
    "styles": {
        "color": {
            "background": "#ffffff",
            "text": "#2d3436"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)"
        },
        "elements": {
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                }
            }
        },
        "blocks": {
            "core/social-links": {
                "spacing": {
                    "blockGap": "0.75rem"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}